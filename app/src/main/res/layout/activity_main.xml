<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        android:id="@+id/circuloDeCarga"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <Button
            android:id="@+id/btnMapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="IrMapa"
            android:text="Mapa"
            android:backgroundTint="#75C5CC"


            app:shapeAppearanceOverlay="@style/midRoundCorners"

            />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="VerLogin"
            android:text="Ver login"
            android:backgroundTint="#CC759B"

            app:shapeAppearanceOverlay="@style/midRoundCorners"

            />


        <Button
            android:id="@+id/btnLoginFB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="VerLogin"
            android:text="Firebase"
            android:backgroundTint="#FA8650"

            app:shapeAppearanceOverlay="@style/nonRoundCorners"

            />

    </LinearLayout>

</RelativeLayout>